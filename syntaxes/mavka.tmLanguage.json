{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Мавка",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#comments"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.mavka",
          "match": "\\b(дія|структура|перебрати|якщо|чекати|взяти|взяти модуль|взяти пак|дати|як|є|вернути|тривала|і|або|спробувати|зловити|інакше|впасти|поки|модуль|рівно|більше|менше|містить|кінець|не|я|дійсне|недійсне|предмет|послідовність)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.mavka",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.mavka",
          "match": "\\\\."
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.numeric.mavka",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.mavka",
          "match": ";;.*$"
        },
        {
          "name": "comment.block.mavka",
          "begin": ";\\*.*",
          "end": "\\*;"
        }
      ]
    }
  },
  "scopeName": "source.мавка"
}